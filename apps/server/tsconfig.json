{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "types": [
      "node",
      "./src/@types/express.d.ts"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}